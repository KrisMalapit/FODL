<script>
    
    $(function () {
        $('#tbl thead tr:eq(1) th').each(function () {
           
            var title = $(this).text();
            if (title == "") {

            } else {
                $(this).html('<input type="search" class="form-control form-control-sm" placeholder="Search ' + title + '" />');
            }
        });

        loadDatatable();
    })
   
    function loadDatatable() {


        if ($.fn.DataTable.isDataTable('#tbl')) {
            $('#tbl').DataTable().destroy();
        }

        var table = $("#tbl").DataTable({
            "processing": true,
            "serverSide": true,
            "searching": true,
            "fixedHeader": true,
            "ajax": {
                "url": "@Url.Action("getData")",
                "type": "POST", 
                "datatype": "json"
            },
            "columns": [
                {
                    data: "createdDate",
                    name: "CreatedDate",
                    render: function (data, type, row) {

                        return moment(data).format("YYYY-MM-DD HH:mm:ss");
                    }
                },
               
                { "data": "shift", "name": "Shift", "autoWidth": true },
                { "data": "unitNo", "name": "UnitNo", "autoWidth": true },
                { "data": "location", "name": "UnitNo", "autoWidth": true },
                { "data": "smr", "name": "SMR", "autoWidth": true },
                {
                     render: function (data, type, row) {
                         var linkEdit = "@Url.Action("Edit", "FuelOil")?id=" + row.id;
                         var linkDelete = "@Url.Action("Delete", "FuelOil")?id=" + row.id;
                         $actions =
                             '<a title="Edit" class="btn btn-white btn-bitbucket" href="' + linkEdit + '"><i class="fa fa-list"></i></a> ' +

                             '<a title="Delete" class="btn btn-danger btn-bitbucket" href="' + linkDelete + '"><i class="fa fa-trash"></i></a>';

                       
                      
                        return $actions;
                    }
                }


            ]
            //,
            //"columnDefs": [{ "orderable": false, "targets": [1, 2, 3] }]


        });


        

       
        $('#tbl input').on('keyup change', function (e) {
           
            var keyCode = e.keyCode
            if (keyCode >= 9 && keyCode <= 27) {

            } else {
                searchFunction(this);
            }
        });
        function searchFunction(e) {

            delay(function () {
                console.log(e);
                table.column($(e).parent().index() + ':visible')
                    .search(e.value)
                    .draw();
            }, 1000);
        }
        $("#tbl_filter").hide();
    }

    var delay = (function () {
        var timer = 0;
        return function (callback, ms) {
            clearTimeout(timer);
            timer = setTimeout(callback, ms);
        };
    })();

    


    
</script>
